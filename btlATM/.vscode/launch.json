{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch ATM",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/ATM.exe",  // Đảm bảo trỏ đến file .exe chính
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,  // Sử dụng console ngoài
            "MIMode": "gdb",
            "miDebuggerPath": "C:/mingw64/bin/gdb.exe",  // Đường dẫn tới GDB
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: g++.exe build active file",  // Task build
            "internalConsoleOptions": "neverOpen"
        }
    ]
}
